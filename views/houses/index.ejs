<%- include('../partials/header') %>
<table class="table table-hover">
  <thead>
    <tr><th></th><th>House Name</th><th>Location</th></tr>
  </thead>
  <tbody>
  <% for(const house of houses) { %>
    <tr>
      <td class="thumb-td">
        <a href="/houses/<%= house._id %>">
          <img src="<%= house.featuredPicture %>" class="thumb-img">
        </a>
      </td>
      <td>
        <a href="/houses/<%= house._id %>">
          <div class="td-a">
            <%= house.name %>
          </div>
        </a>
      </td>
      <td>
        <a href="/houses/<%= house._id %>">
          <div class="td-a">
            <%= house.location %>
          </div>
        </a>
      </td>
    </tr>
  <% } %>
  </tbody>
</table>
<%- include('../partials/footer') %>
